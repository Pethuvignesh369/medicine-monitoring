generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Facility {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  type     String  // e.g., Hospital, Polyclinic, Clinician Center, Dispensary
  medicines Medicine[]
}

model Medicine {
  id                Int      @id @default(autoincrement())
  name              String
  stock             Int
  weeklyRequirement Int
  expiryDate        DateTime?
  facilityId        Int       // âœ… Now required
  facility          Facility  @relation(fields: [facilityId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}








